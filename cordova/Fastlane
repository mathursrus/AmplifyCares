default_platform(:ios)

platform :ios do
  desc "Deploy to TestFlight"
  lane :deploy_to_testflight do
    pilot(
      api_key_path: ENV['FASTLANE_API_KEY'], # Path to your .p8 file
      issuer: ENV['FASTLANE_TEAM_ID'], # Your Apple Team ID
      app_identifier: '9TKF9YQDND.com.yourorgcares.amplifycares' # Your app identifier
    )
  end
end
